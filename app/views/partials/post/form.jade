input( type: 'hidden', name: 'id', value: post.id )
.field
  label( for: 'title' ) Title
  br
  input( name: 'title', id: 'title', value: post.title )
.field
  label( for: 'slug' ) Slug
  br
  input( name: 'slug', id: 'slug', value: post.slug )
.field
  label( for: 'preview' ) Preview
  br
  textarea.wmd-ignore( name: 'preview', id: 'preview', cols: 80, rows: 6 )!= post.preview
.field
  label( for: 'content' ) Content
  br
  textarea( name: 'content', id: 'content', cols: 80, rows: 30, style: 'margin-left: -50%' )!= post.content
  .wmd-preview( style: 'width: 500px; margin-right: -270px; float: right; height: 520px; overflow: auto;' )
.submit
  input( type: 'submit' ) Create post
